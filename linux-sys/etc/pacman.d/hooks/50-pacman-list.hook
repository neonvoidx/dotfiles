[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = *

[Action]
Description = Create backup list of packages installed (including AUR)
When = PostTransaction
Exec = /bin/sh -c '{ pacman -Qqen; pacman -Qqem 2>/dev/null; } | grep -Ev "^(linux|linux-lts|linux-zen|linux-hardened|linux-headers|linux-lts-headers|linux-zen-headers|linux-hardened-headers)$" | sort -u > "/home/neonvoid/dotfiles/linux/.config/pacman/pkglist.txt"'
