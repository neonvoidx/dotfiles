[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = *

[Action]
Description = Create backup list of packages installed (including AUR)
When = PostTransaction
Exec = /bin/sh -c 'pacman -Qqen > "/home/neonvoid/dotfiles/linux/.config/pacman/pkglist.txt" && pacman -Qqem > "/home/neonvoid/dotfiles/linux/.config/pacman/pkglist_aur.txt"'
